{
  "name": "nodejs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "This is simple setup for NodeJs server that uses TypeScript syntactics",
  "main": "./src/server.js",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec ts-node ./src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MartinKamenov/NodeJs-TypeScript-Boilerplate.git"
  },
  "author": "Martin Kamenov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MartinKamenov/NodeJs-TypeScript-Boilerplate/issues"
  },
  "homepage": "https://github.com/MartinKamenov/NodeJs-TypeScript-Boilerplate#readme",
  "devDependencies": {
    "@types/node": "^12.0.4",
    "nodemon": "^1.19.1",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
